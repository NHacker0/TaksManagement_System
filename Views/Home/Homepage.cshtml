@model IEnumerable<TaksManagement_System.Models.Task>

@{
    ViewBag.Title = "Task List";
}

<h2>Task List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.User.Username</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>